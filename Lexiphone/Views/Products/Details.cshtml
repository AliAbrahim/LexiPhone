@model Lexiphone.Models.Product




@{
    ViewBag.Title = "Product- " + Model.Name;
}
<h2>@Model.Name</h2>
<p>
    <img alt="@Model.Name" src="@Model.ProductUrl" />
</p>
<div id="album-details">
    <p>
        <em>Genre:</em>
        @Model.CurrentPrice
    </p>
    <p>
        <em>Product:</em>
        @Model.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.CurrentPrice)
    </p>
    <p class="btn">
        @Html.ActionLink("Add to cart", "AddToCart","ShoppingCart", new { id = Model.ProductId}, "")
    </p>
</div>



















